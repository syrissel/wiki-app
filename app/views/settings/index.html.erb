<p id="notice"><%= notice %></p>

<h1>Settings</h1>

<table>
  <thead>
    <tr>
      <th>Logo</th>
      <th>Smtp address</th>
      <th>Smtp port</th>
      <th>Smtp domain</th>
      <th>Smtp username</th>
      <th>Smtp password</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @settings.each do |setting| %>
      <tr>
        <td><%= setting.logo %></td>
        <td><%= setting.smtp_address %></td>
        <td><%= setting.smtp_port %></td>
        <td><%= setting.smtp_domain %></td>
        <td><%= setting.smtp_username %></td>
        <td><%= setting.smtp_password %></td>
        <td><%= link_to 'Show', setting %></td>
        <td><%= link_to 'Edit', edit_setting_path(setting) %></td>
        <td><%= link_to 'Destroy', setting, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Setting', new_setting_path %>
