<%= form_for @setting, validate: true do |f| %>
  <div class="row">
    <div class="col-3"></div>
    <div class="col-6">
      <div class="form-inputs">
        <h4>General</h4>
        <hr>
        <div class="px-2">
          <div class="form-group">
            <%= f.label :logo %>
            <%= f.text_field :logo, class: 'form-control' %>
          </div>
        </div>
        <h4>Mail Server Settings</h4>
        <hr>
        <div class="px-2">
          <div class="form-group">
            <%= f.label :smtp_address, 'SMTP Address' %>
            <%= f.text_field :smtp_address, class: 'form-control' %>
            <small class="text-muted">eg. mail.example@domain.ca</small>
          </div>
          <div class="form-group">
            <%= f.label :smtp_port, 'SMTP Port' %>
            <%= f.text_field :smtp_port, class: 'form-control' %>
          </div>
          <div class="form-group">
            <%= f.label :smtp_username, 'SMTP Username' %>
            <%= f.text_field :smtp_username, class: 'form-control' %>
            <small class="text-muted">eg. WikiMailer@example.ca</small>
          </div>
          <div class="form-group">
            <%= f.label :smtp_password, 'SMTP Password' %>
            <%= f.password_field :smtp_password, class: 'form-control', value: @setting.smtp_password %>
          </div>
          <div class="form-group">
            <%= f.label :server_ip, 'Server ip address' %>
            <%= f.text_field :server_ip, class: 'form-control' %>
            <small class="text-muted">The local ip address of your server eg. 192.168.100.25</small>
          </div>
          <a target="_blank" class="float-right" href="https://knowledge.hubspot.com/email-notifications/how-can-i-find-my-email-servers-imap-and-smtp-information">How to find SMTP info on outlook</a>
        </div>
      </div>

      <div class="form-actions">
        <%= f.submit 'Update', class: 'btn btn-primary float-left mr-1' %>
        <%= link_to 'Back', admin_path, class: 'btn btn-secondary' %>
      </div>
    </div><!--col-6-->
    <div class="col-3"></div>
  </div><!--row-->
<% end %>
