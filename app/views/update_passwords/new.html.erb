<div class="">
<div class="row">
<div class="col-3"></div>
<div class="col-6">
<h5>Update Password for <%= @user.fullname %></h5>
<hr>
  <%= form_for @update_password_form, url: create_update_passwords_path(@user.id), method: :post, validate: true do |f| %>
    <% if @update_password_form.errors.any? %>
      <div class="error_messages">
        <ul>
          <% @update_password_form.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
    <div class="form-group">
      <%= f.label 'New Password' %>
      <%= f.password_field :new_password, class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= f.label 'Confirm Password' %>
      <%= f.password_field :new_password_confirmation, class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= f.submit 'Change Password', class: 'btn btn-primary' %>
      <%= link_to 'Back', edit_user_path(@user), class: 'btn btn-secondary float-right' %>
    </div>
  <% end %>
  </div>
</div><!--col-8-->
<div class="col-3"></div>
</div><!--row-->