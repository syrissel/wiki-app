<p id="notice"><%= notice %></p>

<h5>PDFs</h5>
<hr>

<div class="d-flex justify-content-center">
<table class="table table-striped table-sm">
  <thead>
    <th>Filename</th>
    <th>Upload date</th>
    <th>Action</th>
  </thead>
  <tbody>
    <% @pdfs.each do |pdf| %>
    <tr>
      <td><%= link_to pdf.name, pdf.path.url, target: '_blank' %></td>
      <td><%= pdf.created_at.strftime("%b %e, %Y %H:%M:%S") %></td>
      <td>
        <div class="dropdown">
          <button class="btn btn-secondary dropdown-toggle btn-sm" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
            Action
          </button>
          <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
            <%= link_to 'Edit', edit_pdf_path(pdf), class: 'dropdown-item' %>
            <div class="dropdown-divider"></div>
            <%= link_to 'Delete', pdf, method: :delete, data: { confirm: 'Are you sure?' }, class: 'dropdown-item text-danger' %>
          </div>
        </div>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>
</div>

<%= paginate @pdfs %>

<br>

<%= link_to 'New Pdf', new_pdf_path, class: 'btn btn-primary' %>
<%= link_to 'Back', admin_path, class: 'btn btn-secondary' %>
