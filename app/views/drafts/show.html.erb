<p id="notice"><%= notice %></p>
<div id="wiki_header" class="d-flex">
  <h3 class="align-self-end"><%= @draft.title %></h3>
  <div class="d-flex flex-column ml-auto">
    <small class="text-muted align-self-end ml-auto">Created by: <%= @draft.user.fullname %> on <%= @draft.created_at.strftime("%B %-d, %Y at %l:%M %p") %></small>
    <small class="ml-auto"><%= link_to 'Edit', edit_draft_path(@draft) %></small>
  </div>
</div>
<hr>

<div id="show_container">
  <div class="note-editor"><%= raw @draft.content %></div>
</div>
<p>
  <strong>Category:</strong>
  <%= @draft.category_id %>
</p>

<p>
  <strong>Approval status:</strong>
  <%= @draft.approval_status_id %>
</p>

<%= link_to 'Edit', edit_draft_path(@draft) %> |
<%= link_to 'Back', drafts_path %>

<%= form_for @draft, html: { class: 'd-flex' } do |f| %>
  <%= f.select :approval_status_id, @statuses.map { |a| [ a.status, a.id ] }, {}, { class: 'form-control w-75' } %>
  <%= f.submit 'Go', class: 'btn btn-primary btn-sm ml-1' %>
  <%= hidden_field(:draft, :page_id, value: @draft.page.id) %>
<% end %>