<ul class='root_categories'>
			<% @root_categories.each do |r| %>
        <p class='gen1'><%= r.name %><box-icon class='mr-1 my-1 float-left' size='20px' name='folder'></box-icon><%= is_form ? (radio_button :page, :category_id, r.id) : '' %></p>
