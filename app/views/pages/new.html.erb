<div class="middle_content">
  <h1>New Document</h1>
  <%= form_for :page, url: pages_path do |f| %>
    <p>
      <%= f.label :title %><br>
      <%= f.text_field :title %>
    </p>

    <p>
      <%= f.label :content %><br>
      <%= f.text_area :content, :class => "tinymce", :rows => 30, :cols => 20 %>
    </p>

    <p>
      <%= f.submit "Post" %>
    </p>
  <% end %>
</div>

