<h2>Welcome to the Computers for Schools Wiki Site!</h2>
<% if @query %>
  <h3>Search results for "<%= @query %>"</h3>
<% else %>
  <h3>Latest updates:</h3>
<% end %>

<% @pages.each do |p| %>
<%= link_to page_path(p) do %>
  <div class="card_exterior">
    <div class="card">
      <div class="cardview_container">
				<%= image_tag("#{p.image.preview.url}") %>
        <h3><%= p.title %></h3>
        <%= sanitize preview(p) %>
        
        <i>by <%= p.user.username %></i>
      
      </div>
    </div>
  <% end %>
  </div>
<% end %>

<% if flash[:notice].present? %>
  <script>
  window.onload = function myFunction() {
    var x = document.getElementById("snackbar");
    x.className = "show";
    setTimeout(function(){ x.className = x.className.replace("show", ""); }, 3000);
  }
  </script>
<% end %>

<% flash.each do |key, value| %>
  <div class="alert alert-<%= key %>"><%= key %> | <%= value %></div>
<% end %>

<div id="snackbar"><%= flash[:notice] %></div>

