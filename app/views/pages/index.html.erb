<% if @query %>
<div class="d-flex justify-content-left">
  <h3>
    Search results for <i>"<%= @query %>"</i>
  </h3>
  <span class="align-self-end ml-auto"><%= @filters %></span>
</div>
  <hr>
<% elsif @pages.present? %>
  <h3>Latest updates</h3>
  <hr>
<% else %>
  <h3>There are currently no wikis published... <%= link_to 'Create one!', new_page_path %></h3>
<% end %>

<% if @users.count == 0 %>
  <%= render 'users/form' %>
<% end %>
<div id="pages_container">
  <div id="pages">
    <%= render @pages %>
  </div>
</div>

<div id="paginator">
  <%= paginate @pages, remote: true %>
</div>  


<% if params[:query].present? && @videos.present? %>
<h3>Video results:</h3>
<ul>
  <% @videos.each do |v| %>
  <li><%= link_to v.name, video_path(v) %></li>
  <% end %>
</ul>
<% end %>

<%= render 'snackbar' %>
