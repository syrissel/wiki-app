<h1>Categories</h1>

<% if @categories.nil? %>
  <h3>There are currently no categories.</h3>
<% else %>
  <ul>
  <% @sorted_categories.each do |c| %>
    <li><%= c.name %><%= link_to 'Move Up', categories_move_up_path(c) %> Sort:<%= c.sort_number %></li>
  <% end %>
  </ul>
<% end %>

<%= link_to 'Create New Category', new_category_path %>