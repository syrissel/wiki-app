<%= form_for @video do |f| %>
  <div class='form_group'>
    <%= f.label :name, class: 'form_label' %>
    <%= f.text_field :name, class: 'text_field' %>
  </div>
  <div class='form_group'>
    <%= f.label 'Video path...'%>
    <%= f.file_field :path %>
    <%= hidden_field(:video, :page_id, value: 5) %>
  </div>
  <div class='form_group'>
    <%= collection_select :video, :image_id, Image.order(:id), :id, :path, prompt: true %>
  </div>
  <div class='form_group'>
    <%= f.submit 'Upload' %>
  </div>
<% end %>