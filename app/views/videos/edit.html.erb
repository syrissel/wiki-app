<h3>Edit Video</h3>
<hr>
<div class="row">
<div class="col-3"></div>
<div class="col-6">
<%= image_tag(@video.image.video_path.url) %>
<%= form_for @video do |f| %>
  <div class='form-group'>
    <%= f.label :name %>
    <%= f.text_field :name, class: 'form-control' %>
  </div>
	<div class='form-group'>
		<%= f.label 'Description (optional)' %>
		<%= f.text_area :description, class: 'form-control'%>
	</div>
	<div class="form-group">
		<%= f.submit 'Update', class: 'btn btn-primary' %>
	</div>
<% end %>
</div><!--col-6-->
<div class="col-3"></div>
</div>