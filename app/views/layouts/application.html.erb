<!DOCTYPE html>
<html>
  <head>
    <title>c4smb Wiki</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= favicon_link_tag asset_path('favicon.png') %>
    
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= stylesheet_link_tag "https://fonts.googleapis.com/css?family=Acme&display=swap" %>
	  <%= javascript_pack_tag 'summernote', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'page', 'data-turbolinks-track': 'reload' %>
    <script>


    </script>
  </head>

  <body>

  <div class="container-fluid p-0">
    <div class="">
    <div class="header_container row">
      <div class="col-4">

          <div class="logo"><%= link_to root_path do %><img src="<%= asset_path('c4smb_logo.png') %>" style="width:210px;" /><% end %></div>
          <div class="wiki_logo"><span>wiki</span> <small style="">(Beta)</small></div>
        
      </div>
      <div class="col-4 d-flex flex-column justify-content-end" style="height:inherit;">
        <div id="" class="my-2">
            <%= form_for pages_path, url: { controller: 'pages', action: 'index' }, method: :get do |f| %>
              <%= f.text_field :query, placeholder: 'Search', class: 'form-control float-left mr-2', style: 'width: 70%' %>
              <button type="submit" class="btn btn-primary float-left mr-2"><i class="fa fa-search" aria-hidden="true"></i></button>
              <div class="dropdown">
                <button id="btn_filter_options" type="button" class="btn btn-secondary float-left" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false"><i class="fa fa-filter" aria-hidden="true"></i></button>
                <div class="dropdown-menu dropdown-menu-right">
                  <div class="px-2 py-1">
                  <h6>Filter options</h6>
                  <div class="dropdown-divider"></div>
                  <div class="form-check form-check-inline mt-2">
                    <%= f.check_box :title, class: 'form-check-input' %>
                    <%= f.label :title, "Title", class: 'form-check-label' %>
                  </div>
                  <div class="form-check form-check-inline">
                    <%= f.check_box :content, class: 'form-check-input' %>
                    <%= f.label :content, "Content", class: 'form-check-label' %>
                  </div>
                  <div class="form-check form-check-inline">
                    <%= f.check_box :category, class: 'form-check-input' %>
                    <%= f.label :category, "Category name", class: 'form-check-label' %>
                  </div>
                  <div class="form-check form-check-inline">
                    <%= f.check_box :user, class: 'form-check-input' %>
                    <%= f.label :user, "Author", class: 'form-check-label' %>
                  </div>
                  <div class="dropdown-divider"></div>
                  <span>Category:</span>
                    <button type="button" id="btn_other_search_options" class="btn btn-link btn-sm">none selected</button><a href="#" id="link_remove_category_filter" class="d-none text-secondary ml-1"data-toggle="tooltip" data-placement="right" title="Remove category filter"><i class="fa fa-times-circle-o fa-lg" aria-hidden="true"></i></a>
                    <button type="button" id="btn_search_help" class="btn btn-link float-right">Help</button>
                  </div>
                </div>
              </div>
              <%= render 'category_search_modal' %>
              <%= render 'search_help_modal' %>
            <% end %>
        </div>
      </div>
      <div class="col-4 d-flex justify-content-end text-right user_login">
        <div class="d-flex flex-column justify-content-end">
          <% if current_user %>
            <div class="dropdown">
              <button class="btn btn-link dropdown-toggle user-menu" type="button" id="" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                <%= current_user.username %>
              </button>
              <div class="dropdown-menu dropdown-menu-right" aria-labelledby="dropdownMenuButton">
                <%= link_to 'Change Password', new_password_path, class: 'dropdown-item' %>
                <div class="dropdown-divider"></div>
                <%= link_to 'Logout', logout_path, class: ' dropdown-item text-danger' %>
              </div>
            </div>

          <% else %>
            <div class="dropdown">
            <button class="btn btn-link dropdown-toggle user-menu" type="button" id="" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
              Menu
            </button>
            <div class="dropdown-menu dropdown-menu-right" aria-labelledby="dropdownMenuButton">
              <%= link_to 'Login', new_session_path, class: ' dropdown-item' %>
            </div>
          </div>
          <% end %>
          </div>
          <% if current_user %>
          <div class="d-flex flex-column justify-content-end">
            <div class="btn-group">
              <button type="button" class="btn btn-link" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
              <div id="notification_bell">
                <%= render 'layouts/notification_bell'%>
              </div>
              </button>
              <div class="dropdown-menu dropdown-menu-right">
                <% if @notifications.present? %>
                  <%= render @notifications %>
                <% end %>
                <div class="dropdown-divider"></div>
                <span class="text-center"><%= link_to 'Clear Notifications', pages_path(clear: 'true'), remote: true, class: 'dropdown-item text-danger' %></span>
              </div>
            </div>


          </div>
          <% end %>
      </div>
    </div><!--row-->
  </div><!--header_container-->

    <div id="side_panel">
    <div id='side_menu_nav'>
        <ul>
          <% unless current_user %>
            <li><%= link_to 'Login', login_path %></li>
          <% else %>
						<li><%= link_to 'Home', root_path %></li>
            <li><%= link_to 'New Wiki', new_page_path %></li>
          <% end %>
          <% if authorize_access && current_user %>
          <li><%= link_to 'Admin', admin_path %></li>
          <% end %>
        </ul>
      </div>
    <div id='side_background'><box-icon id='menu_icon' name='menu' size='72px' color='#d4af37'></box-icon></div>
    <div class="side_panel_container">
        <%= render partial: 'application/category_select', locals: { is_form: false } %>
      </div>
    </div>
    <div id="middle_content">
      <%= yield %>
    </div>
  </div>
    <footer>
    <div class="d-flex justify-content-center h-100">
    <div class="d-flex flex-column justify-content-center text-center">
     <ul class="p-0 list-unstyled">
      <li>Random wiki: <%= link_to @random_page.title, @random_page if @random_page.present? %></li>
      <li>Computers for Schools Manitoba <%= Time.now.year %></li>
     </ul>
     </div>
    </div>
    </footer>

  
    
  </body>
</html>

