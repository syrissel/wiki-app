<!DOCTYPE html>
<html>
  <head>
    <title>c4smb Wiki</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= favicon_link_tag asset_path('favicon.png') %>
    
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= stylesheet_link_tag "https://fonts.googleapis.com/css?family=Acme&display=swap" %>
	  <%= javascript_pack_tag 'summernote', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'page', 'data-turbolinks-track': 'reload' %>
    <script>


    </script>
  </head>

  <body>

  <div class="container-fluid p-0">
    <div class="header_container">
    <div class="row">
      <div class="col-4">
        <%= link_to root_path do %>
          <div class="logo"></div>
          <h2 class="wiki_logo">wiki</h2>
        <% end %>
      </div>
      <div class="col-4">
        <div id="" class="mx-auto">
            <div class="row"><div class="col py-5"></div></div>
            <%= form_tag pages_path, method: :get do %>
              <%= text_field_tag :query, nil, :placeholder => 'Search', class: 'form-control w-75 float-left mr-2' %>
              <button type="submit" class="btn btn-primary"><i class="fa fa-search" aria-hidden="true"></i></button>
              <%
=begin%>
 <%= submit_tag '<i class="fa fa-search" aria-hidden="true"></i>', name: nil, class: 'btn btn-primary' %> 
<%
=end%>
            <% end %>
        </div>
      </div>
      <div class="col-4">
        <div class="user_login">
          <% if current_user %>
          <ul>
            <li><%= current_user.username %></li>
            <li><%= link_to 'Logout', logout_path, onclick: "clearStorage()" %></li>
            <li><%= link_to 'Change Password', new_password_path %></li>

            <div id="notification_bell">
              <%= render 'layouts/notification_bell'%>
            </div>
          </ul>
          <% end %>
        </div>

        <div id="notifications">
            <ul>
              <%#= render partial: 'notifications/notification', collection: @notifications %>
              <% if @notifications.present? %>
                <%= render @notifications %>
              <% end %>
            </ul>
            <%= link_to 'Clear Notifications', pages_path(clear: 'true'), remote: true %>
        </div>
      </div>
    </div><!--row-->




		<%# When the user clicks "Logout", the browser's local storage will be erased. %>
    <script>
      function clearStorage() {
        localStorage.clear();
      }
    </script>



    </div>

    <div id="side_panel">
    <div id='side_menu_nav'>
        <ul>
          <% unless current_user %>
            <li><%= link_to 'Login', login_path %></li>
          <% else %>
						<li><%= link_to 'Home', root_path %></li>
            <li><%= link_to 'New Wiki', new_page_path %></li>
          <% end %>
          <% if authorize_access %>
          <li><%= link_to 'Admin Portal', admin_path %></li>
					<% else %>
					<li><%= link_to 'Conversations', page_forums_path %></li>
          <% end %>
        </ul>
      </div>
    <div id='side_background'><box-icon id='menu_icon' name='menu' size='72px' color='#d4af37'></box-icon></div>
    <div class="side_panel_container">
    
        <%= render partial: 'application/category_select', locals: { is_form: false } %>


      </div>
    </div>
    <div id="middle_content">
      <%= yield %>
    </div>
  </div>
      <footer>
     <ul class="footer_info">
      <li class="footer_info_lastmod">Random wiki: <%= link_to @random_page.title, @random_page if @random_page.present? %></li>
      <li class="footer_info_copyright">Computers for Schools Manitoba <%= Time.now.year %></li>
     </ul>
    </footer>

  
    
  </body>
</html>

