<!DOCTYPE html>
<html>
  <head>
    <title>c4smb Wiki</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= favicon_link_tag asset_path('favicon.png') %>
    
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= stylesheet_link_tag "https://fonts.googleapis.com/css?family=Acme&display=swap" %>
	  <%= javascript_pack_tag 'summernote', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'page', 'data-turbolinks-track': 'reload' %>
    <script>


    </script>
  </head>

  <body>

  <div class="container-fluid p-0">
    <div class="">
    <div class="header_container row">
      <div class="col-4">

          <div class="logo"><%= link_to root_path do %><img src="<%= asset_path('c4smb_logo.png') %>" style="width:210px;" /><% end %></div>
          <div class="wiki_logo"><span>wiki</span> <small style="">(Beta)</small></div>
        
      </div>
      <div class="col-4 d-flex flex-column justify-content-end" style="height:inherit;">
        <div id="" class="my-2">
            <%= form_tag pages_path, method: :get do %>
              <%= text_field_tag :query, nil, :placeholder => 'Search', class: 'form-control w-75 float-left mr-2' %>
              <button type="submit" class="btn btn-primary"><i class="fa fa-search" aria-hidden="true"></i></button>
            <% end %>
        </div>
      </div>
      <div class="col-4 d-flex justify-content-end text-right user_login">
        <div class="d-flex flex-column justify-content-end">
          <% if current_user %>
            <div class="dropdown">
              <button class="btn btn-link dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                <%= current_user.username %>
              </button>
              <div class="dropdown-menu dropdown-menu-right" aria-labelledby="dropdownMenuButton">
                <%= link_to 'Change Password', new_password_path, class: 'dropdown-item' %>
                <div class="dropdown-divider"></div>
                <%= link_to 'Logout', logout_path, class: ' dropdown-item text-danger' %>
              </div>
            </div>

          <% else %>
            <div class="dropdown">
            <button class="btn btn-link dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
              Menu
            </button>
            <div class="dropdown-menu dropdown-menu-right" aria-labelledby="dropdownMenuButton">
              <%= link_to 'Login', new_session_path, class: ' dropdown-item' %>
            </div>
          </div>
          <% end %>
          </div>
          <% if current_user %>
          <div class="d-flex flex-column justify-content-end">
            <div class="btn-group">
              <button type="button" class="btn btn-link" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
              <div id="notification_bell">
                <%= render 'layouts/notification_bell'%>
              </div>
              </button>
              <div class="dropdown-menu dropdown-menu-right">
                <% if @notifications.present? %>
                  <%= render @notifications %>
                <% end %>
                <div class="dropdown-divider"></div>
                <span class="text-center"><%= link_to 'Clear Notifications', pages_path(clear: 'true'), remote: true, class: 'dropdown-item text-danger' %></span>
              </div>
            </div>


          </div>
          <% end %>
      </div>
    </div><!--row-->
  </div><!--header_container-->

    <div id="side_panel">
    <div id='side_menu_nav'>
        <ul>
          <% unless current_user %>
            <li><%= link_to 'Login', login_path %></li>
          <% else %>
						<li><%= link_to 'Home', root_path %></li>
            <li><%= link_to 'New Wiki', new_page_path %></li>
          <% end %>
          <% if authorize_access && current_user %>
          <li><%= link_to 'Admin Portal', admin_path %></li>
          <% end %>
        </ul>
      </div>
    <div id='side_background'><box-icon id='menu_icon' name='menu' size='72px' color='#d4af37'></box-icon></div>
    <div class="side_panel_container">
        <%= render partial: 'application/category_select', locals: { is_form: false } %>
      </div>
    </div>
    <div id="middle_content">
      <%= yield %>
    </div>
  </div>
      <footer>
     <ul class="footer_info">
      <li class="footer_info_lastmod">Random wiki: <%= link_to @random_page.title, @random_page if @random_page.present? %></li>
      <li class="footer_info_copyright">Computers for Schools Manitoba <%= Time.now.year %></li>
     </ul>
    </footer>

  
    
  </body>
</html>

