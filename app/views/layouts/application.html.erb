<!DOCTYPE html>
<html>
  <head>
    <title>c4smb Wiki</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= favicon_link_tag asset_path('favicon.png') %>
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
    <%= stylesheet_link_tag "https://fonts.googleapis.com/css?family=Acme&display=swap" %>
    <script src="https://cdn.quilljs.com/1.3.6/quill.js"></script>
	  <%= javascript_include_tag 'image-resize.js' %>
    <script>


    </script>
  </head>

  <body>

  <div class="container">
    <div class="header_container">

      <%= link_to root_path do %>
      <div class="logo"></div>
      <h2 class="wiki_logo">wiki</h2>
      <% end %>
      <div class="user_login">
      <% if current_user %>
      <ul>
        <li><%= current_user.username %></li>
        <li><%= link_to 'Logout', logout_path, onclick: "clearStorage()" %></li>
				<li><%= link_to 'Change Password', password_change_path(current_user) %></li>

        <div id="notification_bell">
					<%= render 'layouts/notification_bell'%>
				</div>
      </ul>
      <% end %>
    </div>

		<div id="notifications">
				<ul>
					<%#= render partial: 'notifications/notification', collection: @notifications %>
					<% if @notifications.present? %>
						<%= render @notifications %>
					<% end %>
				</ul>
				<%= link_to 'Clear Notifications', pages_path(clear: 'true'), remote: true %>
		</div>

		<%# When the user clicks "Logout", the browser's local storage will be erased. %>
    <script>
      function clearStorage() {
        localStorage.clear();
      }
    </script>

    <div id="search">
        <%= form_tag pages_path, method: :get do %>
          <%= text_field_tag :query, nil, :placeholder => 'Search' %>
          <%= submit_tag "", name: nil %>
        <% end %>
    </div>

    </div>

    <div id="side_panel">
    <div id='side_menu_nav'>
        <ul>
          <% unless current_user %>
            <li><%= link_to 'Login', login_path %></li>
          <% else %>
						<li><%= link_to 'Home', root_path %></li>
            <li><%= link_to 'New Wiki', new_page_path %></li>
          <% end %>
          <% if authorize_access %>
          <li><%= link_to 'Admin Portal', admin_path %></li>
					<% else %>
					<li><%= link_to 'Conversations', page_forums_path %></li>
          <% end %>
        </ul>
      </div>
    <div id='side_background'><box-icon id='menu_icon' name='menu' size='72px' color='#d4af37'></box-icon></div>
    <div class="side_panel_container">
    
		<ul class='root_categories'>
			<% @root_categories.each do |r| %>
        <p class='gen1'><%= r.name %><box-icon style='margin-right:2px; float:left;' size='18px' name='folder'></box-icon></p>
				<li class='gen1_list'>
						
            
						<% @sub_categories.each do |s| %>
							<% if r.id == s.category_id %>
								<ul>
                  <p class='gen2'><%= s.name %><box-icon style='margin-right:2px; float:left;' size='18px' name='folder'></box-icon></p>
									<li class='gen2_list'>
										
										<% pages_of_type = @menu_pages.where("category_id = :category AND page_publish_status_id = :publish", 
																													category: s.id, publish: PUBLISHED)%>
                  <ul>
                  <% pages_of_type.each do |pot| %>
                    <li>
                      <%= link_to pot.title, pot %><box-icon style='margin-right:2px; float:left;' size='18px' name='file'></box-icon>
                    </li>
                  <% end %>
									</ul>
									<% @sub_categories.each do |t| %>
										<% if s.id == t.category_id %>
											<ul>
                        <p class='gen3'><%= t.name %><box-icon style='margin-right:2px; float:left;' size='18px' name='folder'></box-icon></p>
												<li class='gen3_list'>
													
                      		<% pages_of_type = @menu_pages.where("category_id = :category AND page_publish_status_id = :publish", 
																																category: t.id, publish: PUBLISHED)%>
                        	<ul>
                        	<% pages_of_type.each do |pot| %>
                          	<li>
                            	<%= link_to pot.title, pot %><box-icon style='margin-right:2px; float:left;' size='18px' name='file'>
                          	</li>
                        	<% end %>
                        	</ul>
													<% @sub_categories.each do |u| %>
														<% if t.id == u.category_id %>
															<ul>
                                <p class='gen4'><%= u.name %><box-icon style='margin-right:2px; float:left;' size='18px' name='folder'></box-icon></p>
																<li class='gen4_list'>
																	
                            			<% pages_of_type = @menu_pages.where("category_id = :category AND page_publish_status_id = :publish", 
																																				category: u.id, publish: PUBLISHED)%>
                              		<ul>
																	<% pages_of_type.each do |pot| %>
																		<li>
																			<%= link_to pot.title, pot %><box-icon style='margin-right:2px; float:left;' size='18px' name='file'>
																		</li>
																	<% end %>
                              		</ul>
																</li>
															</ul>
														<% end %>
													<% end %>
												</li>
											</ul>
										<% end %>
									<% end %>
									</li>
								</ul>
							<% end %>
						<% end %>

            <% pages_of_type = @menu_pages.where("category_id = :category AND page_publish_status_id = :publish", 
																									category: r.id, publish: PUBLISHED)%>
            <ul class="root_pages">
            <% pages_of_type.each do |pot| %>
              <li>
                <%= link_to pot.title, pot %><box-icon style='margin-right:2px; float:left;' size='18px' name='file'>
              </li>
            <% end %>
            </ul>
				</li>
			<% end %>
		</ul>


      </div>
    </div>
    <div id="middle_content">
      <%= yield %>
    </div>
  </div>
      <footer>
     <ul class="footer_info">
      <li class="footer_info_lastmod">Last modified by smireault 18:30 Tuesday, November 12, 2019</li>
      <li class="footer_info_copyright">Copywrong Computers for Schools Manitoba 2019</li>
     </ul>
    </footer>

  
    
  </body>
</html>

<script>
  const checkNotifications = () => {
    fetch("<%= bell_toggle_path %>")
      .then(response => response.text())
      .then(response => {
        document.getElementById("notification_bell").innerHTML = response;
      });
  };

	setInterval(checkNotifications, 10000);
	
	document.body.addEventListener('click', function() {
		let menu = document.getElementById("notifications");
		menu.style.display = 'none';
	});
</script>
