<p id="notice"><%= notice %></p>

<h1>Images</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @images.each do |image| %>
      <tr>
				<div id="image_container">
        <td>
					<strong><%=image.name%></strong><br />
					<% if image.path.present? %>
					<%= link_to edit_image_path(image) do %><%=image_tag(image.path.preview.url)%><% end %>
					<% else %>
					<%= link_to edit_image_path(image) do %><%=image_tag(image.video_path.preview.url)%><% end %>
					<% end %>
				</td>
        <%#<td><%= link_to 'Edit', edit_image_path(image) %><%#</td>%>
        <td><%= link_to 'Destroy', image, method: :delete, data: { confirm: 'Are you sure?' } %></td>
				</div>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

